<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity">
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.4"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/cancle"
            app:layout_constraintTop_toTopOf="@id/guideline"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/div"
            app:layout_constraintBottom_toTopOf="@id/one"
            android:text="C"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/div"
            app:layout_constraintTop_toTopOf="@id/guideline"
            app:layout_constraintLeft_toRightOf="@id/cancle"
            app:layout_constraintRight_toLeftOf="@+id/mul"
            app:layout_constraintBottom_toTopOf="@id/two"
            android:text="%"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/mul"
            app:layout_constraintTop_toTopOf="@id/guideline"
            app:layout_constraintLeft_toRightOf="@id/div"
            app:layout_constraintRight_toLeftOf="@id/back"
            android:text="X" app:layout_constraintBottom_toTopOf="@+id/three"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/back"
            app:layout_constraintTop_toTopOf="@id/guideline"
            app:layout_constraintLeft_toRightOf="@id/mul"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/sub"
            android:text="BACK"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/sub"
            app:layout_constraintTop_toBottomOf="@id/cancle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/three"
            app:layout_constraintBottom_toTopOf="@id/add"
            android:text="-"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/add"
            app:layout_constraintTop_toBottomOf="@+id/sub"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/six"
            app:layout_constraintBottom_toTopOf="@id/enter"
            android:text="+"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/enter"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add"
            app:layout_constraintLeft_toRightOf="@id/nine"
            app:layout_constraintBottom_toTopOf="@id/zero"
            android:text="="/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/one"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/two"
            app:layout_constraintTop_toBottomOf="@+id/cancle"
            app:layout_constraintBottom_toTopOf="@id/four"
            android:text="1"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/two"
            app:layout_constraintTop_toBottomOf="@id/div"
            app:layout_constraintLeft_toRightOf="@id/one"
            app:layout_constraintRight_toLeftOf="@id/three"
            app:layout_constraintBottom_toTopOf="@id/five"
            android:text="2"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/three"
            app:layout_constraintTop_toBottomOf="@id/mul"
            app:layout_constraintLeft_toRightOf="@id/two"
            app:layout_constraintRight_toLeftOf="@id/sub"
            app:layout_constraintBottom_toTopOf="@id/six"
            android:text="3"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/four"
            app:layout_constraintTop_toBottomOf="@id/one"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/five"
            app:layout_constraintBottom_toTopOf="@id/seven"
            android:text="4"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/five"
            app:layout_constraintTop_toBottomOf="@id/two"
            app:layout_constraintLeft_toRightOf="@id/four"
            app:layout_constraintRight_toLeftOf="@id/six"
            app:layout_constraintBottom_toTopOf="@id/eight"
            android:text="5"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/six"
            app:layout_constraintTop_toBottomOf="@id/three"
            app:layout_constraintLeft_toRightOf="@id/five"
            app:layout_constraintRight_toLeftOf="@id/add"
            app:layout_constraintBottom_toTopOf="@id/nine"
            android:text="6"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/seven"
            app:layout_constraintTop_toBottomOf="@+id/four"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/eight"
            app:layout_constraintBottom_toTopOf="@id/zero"
            android:text="7"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/eight"
            app:layout_constraintTop_toBottomOf="@id/five"
            app:layout_constraintLeft_toRightOf="@id/seven"
            app:layout_constraintRight_toLeftOf="@id/nine"
            app:layout_constraintBottom_toTopOf="@id/zero"
            android:text="8"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/nine"
            app:layout_constraintTop_toBottomOf="@id/six"
            app:layout_constraintLeft_toRightOf="@id/eight"
            app:layout_constraintRight_toLeftOf="@id/enter"
            app:layout_constraintBottom_toTopOf="@id/zero"
            android:text="9"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/zero"
            app:layout_constraintTop_toBottomOf="@id/eight"
            app:layout_constraintLeft_toRightOf="@id/seven"
            app:layout_constraintRight_toLeftOf="@id/nine"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="0"/>

    <TextView android:layout_width="match_parent" android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guideline"
            android:id="@+id/screen"
            android:textSize="100sp"
            android:gravity="center_vertical"/>
</android.support.constraint.ConstraintLayout>